<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="crmPU" transaction-type="JTA">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <jta-data-source>java:/crmDS</jta-data-source>
    <class>hu.clientbase.entity.Customer</class>
    <class>hu.clientbase.entity.Address</class>
    <class>hu.clientbase.entity.Contact</class>
    <class>hu.clientbase.entity.User</class>
    <class>hu.clientbase.entity.Project</class>
    <class>hu.clientbase.entity.Note</class>
    <class>hu.clientbase.entity.Role</class>
    <class>hu.clientbase.entity.Invitation</class>
    <class>hu.clientbase.entity.Event</class>
    <class>hu.clientbase.entity.ContactChannel</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="format_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
